h1 #{User.model_name.human}詳細

table.table.table-hover
  tbody
    tr
      th= User.human_attribute_name(:name)
      td= @user.name
    tr
      th= User.human_attribute_name(:email)
      td= @user.email
    tr
      th= User.human_attribute_name(:image)
      td= image_tag @user.image if @user.image.attached?
    tr
      th= User.human_attribute_name(:created_at)
      td= I18n.l @user.created_at
    tr
      th= User.human_attribute_name(:updated_at)
      td= I18n.l @user.updated_at

= link_to '編集', edit_user_path(@user), class: 'btn btn-primary mr-3'
= link_to '削除', user_path(@user), method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger'
